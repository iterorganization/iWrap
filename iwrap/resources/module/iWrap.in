set name __IWRAP_NAME__
set ver __VERSION__

module-whatis "iWrap - a modular component generator, implemented in Python, used for creating IMAS actors from physics models."
proc ModulesHelp { } {
	puts stderr "\tThis module sets the environment for $name version $ver"
}

conflict $name

set prefix "__INSTALL_PREFIX__"
if { [file exists $prefix] } {
	prepend-path PATH			$prefix/bin
	prepend-path PYTHONPATH		__INSTALL_PY__/site-packages
} else {
	puts stderr "Error: $prefix could not be found, exiting without changes."
	break
}