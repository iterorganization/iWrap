# actor name
ACTOR_NAME={{actor_settings.actor_name}}

FF=ifort
FC=ifort
CC=gcc

WRAPPER_DIR=$(dir $(realpath $(firstword $(MAKEFILE_LIST))))

FLAGS=-g -fPIC
OPENMP=NO
OPENMPFLAG=

MOD_DIR=./build/

# Compiler options for gfortran
XFLAGS=-g -fPIC -fno-second-underscore -ffree-line-length-none -J$(MOD_DIR)

FFLAGS=$(FLAGS) $(OPENMPFLAG)
CODE_LIB_FILE=$(notdir {{actor_settings.code_description.code_path}})
CODE_LIB_DEF=../native/lib/$(CODE_LIB_FILE)

# main IMAS libs to be used
CORE_LIBS_FLAGS= $(shell pkg-config --cflags imas-ifort xmllib)
CORE_LIBS=$(shell pkg-config --libs imas-ifort xmllib)

# required 'platform' libs (i.e. published using pkg-config mechanism)
PLATFORM_LIBS_NAMES={{actor_settings.code_description.language_specific.system_libraries | join(' ')}}
PLATFORM_LIBS_FLAGS=$(shell pkg-config --cflags $(PLATFORM_LIBS_NAMES))
PLATFORM_LIBS=$(shell pkg-config --libs $(PLATFORM_LIBS_NAMES))

# required 'custom' libs (i.e. provided by user as a pth to library)
CUSTOM_LIBS={{actor_settings.code_description.language_specific.custom_libraries | join(' ')}}


INCLUDES=-I./include $(CORE_LIBS_FLAGS) $(PLATFORM_LIBS)
LIBS=$(CORE_LIBS) $(PLATFORM_LIBS) $(CUSTOM_LIBS) $(PLATFORM_LIBS_FLAGS)

all: bin/$(ACTOR_NAME).exe   lib/lib$(ACTOR_NAME).so

bin/$(ACTOR_NAME).exe: src/standalone.f90 build/RWTools.o build/fortrantools.o build/FortranWrap.o
	@echo "   * $^ -> $@"
	@mkdir -p ./bin
	$(FF) $(FFLAGS) -o $@ -Wl,--start-group $^ $(INCLUDES) -I$(MOD_DIR) $(LIBS) -Wl,--end-group -Wl,-rpath,$(WRAPPER_DIR)/lib_ext/def/


build/RWTools.o: src/RWTools.f90 build/FortranWrap.o
	@echo "  * $< -> $@"
	$(FF) $(FFLAGS) -c -w $^ -o $@  $(INCLUDES)

build/fortrantools.o: src/fortrantools.f90
	@echo "  * $^ -> $@"
	@mkdir -p ./build
	$(FF) $(FFLAGS) -c -w $^ -o $@  $(INCLUDES)

lib/$(ACTOR_NAME).so: build/FortranWrap.o  build/fortrantools.o
	@echo "   * $^ -> $@"
	@mkdir -p ./lib
	$(FF) $(FFLAGS) -shared -o $@ -Wl,--start-group $^ $(LIBS) -Wl,--end-group -Wl,-rpath,$(WRAPPER_DIR)/lib_ext/def/

build/FortranWrap.o: src/FortranWrap.f90 build/fortrantools.o
	@echo "   * $< -> $@"
	$(FF) $(FFLAGS) -c -w $^ -o $@  $(INCLUDES)

clean:
	-rm -f *.o build/* lib/*.so bin/*
